@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md">
        <h1 class="text-3xl font-semibold text-center text-gray-800 mb-6">@ViewData["Title"]</h1>

        <form id="account" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm" role="alert"></div>

            <div>
                <label asp-for="Input.Email" class="block text-gray-700 font-medium mb-1">Email</label>
                <input asp-for="Input.Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Input.Password" class="block text-gray-700 font-medium mb-1">Password</label>
                <input asp-for="Input.Password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:outline-none" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center justify-between">
                <label class="flex items-center text-sm text-gray-600">
                    <input class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded" asp-for="Input.RememberMe" />
                    <span class="ml-2">@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                </label>             
            </div>

            <button id="login-submit" type="submit" class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 transition duration-150">
                Log in
            </button>

            <div class="text-center text-sm text-gray-600 mt-4">
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-indigo-600 hover:underline">Register as a new user</a>
                </p>
                
            </div>
        </form>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="mt-8">
                <h3 class="text-center text-gray-700 font-medium mb-3">Or continue with</h3>
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="flex flex-col gap-2">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit"
                                class="w-full bg-gray-100 text-gray-700 py-2 rounded-lg hover:bg-gray-200 transition duration-150"
                                name="provider"
                                value="@provider.Name"
                                title="Log in using your @provider.DisplayName account">
                            @provider.DisplayName
                        </button>
                    }
                </form>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}