@{
    ViewData["Title"] = "Fix My Shot";
}

<div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-blue-50 to-indigo-100 py-10">
    <h1 class="text-4xl font-bold text-gray-800 mb-8">@ViewData["Title"]</h1>

    <div class="bg-white shadow-xl rounded-2xl p-8 flex flex-col items-center space-y-6 w-full max-w-xl">
        <div class="relative">
            <video id="video" autoplay playsinline class="rounded-lg shadow-md border border-gray-200" width="480" height="360"></video>
            <canvas id="canvas" class="absolute top-0 left-0 rounded-lg pointer-events-none" width="480" height="360"></canvas>

            <div id="countdown"
                 class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2
                        text-8xl font-bold text-white bg-black bg-opacity-50 rounded-full
                        w-32 h-32 flex items-center justify-center hidden shadow-lg">
                3
            </div>
        </div>

        <div class="flex gap-4">
            <button id="startBtn" type="button"
                    class="bg-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition shadow">
                Start Camera
            </button>

            <button id="toggleSkeletonBtn" type="button"
                    class="bg-gray-500 text-white px-6 py-3 rounded-lg font-semibold hover:bg-gray-600 transition shadow">
                Show Skeleton
            </button>
        </div>

        <pre id="results"
             class="text-gray-700 bg-gray-100 border border-gray-200 rounded-lg p-4 w-full text-sm min-h-24 shadow-inner whitespace-pre-wrap break-words"></pre>


        <div class="bg-blue-50 border-l-4 border-blue-500 p-5 rounded-lg w-full text-sm shadow-sm">
            <h3 class="font-semibold text-gray-800 mb-2">Instructions:</h3>
            <ol class="list-decimal list-inside space-y-1 text-gray-700">
                <li>Click <span class="font-medium text-indigo-600">Start Camera</span> to begin</li>
                <li>Step back so your full body is visible</li>
                <li>Get into shooting position (arms raised)</li>
                <li>Click <span class="font-medium text-indigo-600">Start Analysis</span> when ready</li>
                <li>Hold position during 3-second countdown</li>
            </ol>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/@@tensorflow/tfjs@4.13.0"></script>
<script src="https://cdn.jsdelivr.net/npm/@@tensorflow-models/pose-detection"></script>
<script src="https://cdn.jsdelivr.net/npm/@@tensorflow/tfjs-backend-webgl"></script>



<script src="~/js/analyzeShot.js"></script>
