@{
    ViewData["Title"] = "Fix My Shot";
}

<div class="min-h-screen flex flex-col items-center justify-center bg-gradient-to-br from-gray-900 via-indigo-900 to-indigo-700 text-white px-6 py-20">


    <div class="max-w-3xl text-center">
        <h1 class="text-5xl font-extrabold mb-4 tracking-tight">
            <span class="text-indigo-400">FixMyShot</span>
        </h1>
        <p class="text-lg text-gray-200 mb-8 leading-relaxed">
            An <span class="font-semibold text-indigo-300">AI-powered basketball shot form corrector</span> that analyzes your posture and helps you perfect your shooting technique — one shot at a time.
        </p>

        <div class="flex flex-col sm:flex-row justify-center gap-4">
            <a href="/Home/Index"
               class="bg-indigo-500 hover:bg-indigo-600 text-white px-8 py-3 rounded-lg font-semibold shadow-lg transition">
                Start Analyzing
            </a>
            
        </div>
    </div>

   

    <div class="mt-20 text-center">
        <h2 class="text-2xl font-bold mb-3">Ready to level up your shot?</h2>
        <p class="text-base text-gray-200 mb-12 leading-relaxed">
            Register a free account to save your shot form history and compare sessions
        </p>
        <a href="/Identity/Account/Register"
           class="bg-white text-indigo-600 hover:bg-gray-100 px-8 py-3 rounded-lg font-semibold shadow-lg transition mt-1 inline-block">
            Register Now
        </a>
    </div>

</div>