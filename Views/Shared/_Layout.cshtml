<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FixMyShot</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FixMyShot.styles.css" asp-append-version="true" />
</head>
<body class="bg-gray-50">
    <header class="bg-white shadow-md">
        <nav class="container mx-auto px-6 py-4">
            <div class="flex items-center justify-between">
                <a asp-area="" asp-controller="Home" asp-action="HomePage" class="text-2xl font-bold text-indigo-600 hover:text-indigo-700">
                    FixMyShot
                </a>

                <div class="hidden md:flex items-center space-x-8">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-gray-700 hover:text-indigo-600 font-medium transition">
                        Analyze
                    </a>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-area="" asp-controller="Home" asp-action="History" class="text-gray-700 hover:text-indigo-600 font-medium transition">
                            History
                        </a>
                    }
                    

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="bg-white border-t border-gray-200 mt-20">
        <div class="container mx-auto px-6 py-6">
            <p class="text-center text-gray-600 text-sm">
                &copy; 2025 - FixMyShot - Designed by Jacob Reimer
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>